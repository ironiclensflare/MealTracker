<div class="row">
    <div class="col-md-12">
        <h1>Create a new meal</h1>
        <form action="/meals/create" method="POST">
            <% if(flash && flash.error) {%>
            <% console.log(flash.error) %>
                <div class="alert alert-danger">
                    <h4>There is a problem with the following fields:</h4>
                    <ul>
                        <% Object.keys(flash.error.invalidAttributes).forEach(function(err){ %>
                        <li><%= JSON.stringify(flash.error.invalidAttributes[err]) %></li>
                        <% }) %>
                    </ul>
                </div>
            <% } %>

                    <div class="form-group">
                        <label for="name" class="control-label">Name</label>
                        <input type="text" id="name" name="name" placeholder="Name" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="date" class="control-label">Date</label>
                        <input type="text" id="date" name="date" placeholder="Date" class="form-control" />
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-primary" value="Create" />
                    </div>
        </form>
    </div>
</div>